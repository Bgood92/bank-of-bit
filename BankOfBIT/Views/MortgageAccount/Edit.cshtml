@model BankOfBIT.Models.MortgageAccount

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    //Added "right-align" class to each input div
    //Modified the razor syntax such that every instance of @HTML.EditFor 
    //for ClientNumber, AccountNumber, and TransactionNumber is
    //changed to @HTML.HiddenFor and the corresponding labels @HTML.LabelFor
    //are removed completely
    <fieldset>
        <legend>MortgageAccount</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MortgageRate)
        </div>
        <div class="editor-field right-align">
            @Html.EditorFor(model => model.MortgageRate)
            @Html.ValidationMessageFor(model => model.MortgageRate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Amortization)
        </div>
        <div class="editor-field right-align">
            @Html.EditorFor(model => model.Amortization)
            @Html.ValidationMessageFor(model => model.Amortization)
        </div>

        @Html.HiddenFor(model => model.BankAccountId)

        <div class="editor-field">
            @Html.HiddenFor(model => model.AccountNumber)
            @Html.ValidationMessageFor(model => model.AccountNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClientId, "Client")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ClientId", String.Empty)
            @Html.ValidationMessageFor(model => model.ClientId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AccountStateId, "AccountState")
        </div>
        <div class="editor-field right-align">
            @Html.DropDownList("AccountStateId", String.Empty)
            @Html.ValidationMessageFor(model => model.AccountStateId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Balance)
        </div>
        <div class="editor-field right-align">
            @Html.EditorFor(model => model.Balance)
            @Html.ValidationMessageFor(model => model.Balance)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpeningBalance)
        </div>
        <div class="editor-field right-align">
            @Html.EditorFor(model => model.OpeningBalance)
            @Html.ValidationMessageFor(model => model.OpeningBalance)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateCreated)
        </div>
        <div class="editor-field right-align">
            @Html.EditorFor(model => model.DateCreated)
            @Html.ValidationMessageFor(model => model.DateCreated)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Notes)
        </div>
        <div class="editor-field right-align">
            @Html.EditorFor(model => model.Notes)
            @Html.ValidationMessageFor(model => model.Notes)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
